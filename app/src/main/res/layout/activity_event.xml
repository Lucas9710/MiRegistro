                            android:elevation="6dp"
                            android:gravity="center"
                            android:text="Redes&#10;sociales"
                            android:textColor="@android:color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/buttonSocialNetworks"
                            app:layout_constraintEnd_toEndOf="@+id/buttonSocialNetworks"
                            app:layout_constraintStart_toStartOf="@+id/buttonSocialNetworks"
                            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginBottom="44dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="16dp"
                            android:elevation="6dp"
                            app:layout_constraintBottom_toBottomOf="@+id/buttonSocialNetworks"
                            app:layout_constraintEnd_toEndOf="@+id/buttonSocialNetworks"
                            app:layout_constraintStart_toStartOf="@+id/buttonSocialNetworks"
                            app:layout_constraintTop_toTopOf="@+id/buttonSocialNetworks"
                            app:srcCompat="@drawable/activity_social" />

                        <ImageView
                            android:id="@+id/imageView69"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginBottom="44dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="16dp"
                            android:elevation="6dp"
                            app:layout_constraintBottom_toBottomOf="@+id/buttonMusic"
