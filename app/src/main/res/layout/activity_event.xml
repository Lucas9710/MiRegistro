                            android:layout_marginBottom="2dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="-2dp"
                            android:background="@android:color/black"
                            android:elevation="6dp"
                            android:gravity="center"
                            android:text="Ranking&#10;musical"
                            android:textColor="@android:color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/buttonMusic"
                            app:layout_constraintEnd_toEndOf="@+id/buttonMusic"
                            app:layout_constraintStart_toStartOf="@+id/buttonMusic"
                            app:layout_constraintTop_toBottomOf="@+id/imageView69" />

