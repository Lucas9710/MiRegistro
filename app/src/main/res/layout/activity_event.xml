                            android:layout_height="0dp"
                            android:layout_marginBottom="44dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="16dp"
                            android:elevation="6dp"
                            app:layout_constraintBottom_toBottomOf="@+id/buttonMap"
                            app:layout_constraintEnd_toEndOf="@+id/buttonMap"
                            app:layout_constraintStart_toStartOf="@+id/buttonMap"
                            app:layout_constraintTop_toTopOf="@+id/buttonMap"
                            app:srcCompat="@drawable/activity_maps" />

                        <Button
                            android:id="@+id/buttonMusic"
                            style="@style/AppTheme.Button"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="24dp"
                            android:textSize="13sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/buttonMap" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/black"
                            android:elevation="6dp"
                            android:gravity="center"
                            android:text="Mi mesa"
                            android:textColor="@android:color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/buttonAssignment"
                            app:layout_constraintEnd_toEndOf="@+id/buttonAssignment"
                            app:layout_constraintStart_toStartOf="@+id/buttonAssignment"
                            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

                        <Button
                            android:id="@+id/buttonSocialNetworks"
