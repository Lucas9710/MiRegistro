                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/black"
                            android:elevation="6dp"
                            android:text="¿Cómo llego?"
                            android:textColor="@android:color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/buttonMap"
                            app:layout_constraintEnd_toEndOf="@+id/buttonMap"
                            app:layout_constraintStart_toStartOf="@+id/buttonMap"
                            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/black"
                            android:elevation="6dp"
                            android:gravity="center"
                            android:text="Código de acceso al evento"
                            android:textColor="@android:color/white"
                            app:layout_constraintBottom_toBottomOf="@+id/buttonGenerateQR"
                            app:layout_constraintEnd_toEndOf="@+id/buttonGenerateQR"
                            app:layout_constraintStart_toEndOf="@+id/imageView6"
